---
//imports here
import CurrentDate from "./CurrentDate.astro";
const currentPath = Astro.url.pathname;
---
<script type="module">
  import { initDecoding } from "/Portfolio/src/utils/decodingEffect.js";
  window.addEventListener("DOMContentLoaded", initDecoding);
</script>

<header>
  <div class="header-left">
    <a href="#"><img src="/Portfolio/HeaderLogo.svg" alt="Logo" class="header-logo"></a>
    <h1>
      Jacob Taira 
      <span id="decoding-text"></span>
    </h1>
  </div>
  
  <div class="header-right">
    <CurrentDate />
    <div class="nav-icons">
      <div class="nav-item">
        <a href="/Portfolio">
          <img src={currentPath === '/Portfolio/' ? '/Portfolio/selected_home.svg' : '/Portfolio/unselected_home.svg'} alt="Home Icon" />
        </a>
        <span class="nav-text">Home</span>
      </div>

      <div class="nav-item">
        <a href="/Portfolio/ideas">
          <img src={currentPath === '/Portfolio/ideas' ? '/Portfolio/selected_lightbulb.svg' : '/Portfolio/unselected_lightbulb.svg'} alt="Lightbulb Icon" />
        </a>
        <span class="nav-text">Ideas</span>
      </div>

      <div class="nav-item">
        <a href="/Portfolio/about">
          <img src={currentPath === '/Portfolio/about' ? '/Portfolio/selected_about.svg' : '/Portfolio/unselected_about.svg'} alt="Info Icon" />
        </a>
        <span class="nav-text">About</span>
      </div>
    </div>
  </div>
</header>

<style>
  header {
    position: sticky;
    top: 0;
    width: 100%;
    height: 4rem;
    padding: 1rem;
    padding-left: 4rem;
    padding-right: 4rem;
    background-color: rgb(255, 255, 255);
    display: flex;
    justify-content: space-between; 
    align-items: center;
    user-select: none;    
    border-bottom-color: #e0dfdf;
    border-bottom-width: .05rem;
    z-index: 10; /*prevents project cards from clipping through header on hover*/
  }
  .header-left {
    display: flex;
    align-items: center;
  }
  .header-left h1 {
    margin-left: 1.2rem;
    font-size: 1.3rem;
  }
  .header-right {
    display: flex;
    align-items: center;
    gap: 1rem;
  }
  .header-logo {
    width: 4.5rem;
    height: auto; 
  }
  .nav-icons {
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-width: 1px;
    height: 2rem;
    width: 10rem;
    border-color: #838383;
    border-radius: 8px;
    margin-left: 2rem;
    padding: 0 20px;
    gap: 0.5rem;
  }
  .nav-item {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .nav-item a img {
    width: 24px;
    height: 24px;
    cursor: pointer;
  }
  .nav-text {
    position: absolute;
    bottom: -2.2rem;
    opacity: 0;
    visibility: hidden;
    background: #333;
    color: #fff;
    padding: .3rem 1rem;
    font-size: 0.9rem;
    border-radius: 5px;
    transform: translateY(2rem);
    transition: opacity 0.3s, transform 0.3s, visibility 0.3s;
    pointer-events: none;
  }
  .nav-item:hover .nav-text {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }
  a {
    color: rgb(0, 0, 0);
    text-decoration: none;
  }
  #decoding-text {
    font-size: 1rem;
    opacity: 0.5;
    color: rgb(0, 0, 0);
  }
</style>
