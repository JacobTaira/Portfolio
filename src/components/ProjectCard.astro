---
// Props: title, description, and optional link
export interface Props {
  link: string;
  description?: string;
  title?: string;
  descriptionClass?: string;
  image?: string;
  imageClass?: string;
}
const { link, description, title, descriptionClass, image, imageClass} = Astro.props;
---
<a href={link} target="_self" rel="noopener noreferrer"> 
  <div class="project-card">
    {image && 
      <div class="image-container">
        <img src={image} alt={`${title} thumbnail`} class={imageClass}/>
      </div>
    }
    <p class={descriptionClass}>{title ? title : description}</p>
  </div>
</a>

<style>
  .project-card {
    border-radius: 12px;
    height: 100%;
    background-color: white; 
    padding: 1rem;
    border: 1px solid #838383;
    transition: transform 0.2s, box-shadow 0.2s;
    user-select: none; /* Disables text selection */
  }
  .project-card:hover {
    transform: scale(1.02);
    box-shadow: 0 0 8px rgba(0, 0, 0, 0.2); 
    /*horizontal-offset vertical-offset blur-radius spread-radius color;*/
  }
  .project-card a {
    display: block; /* Makes the link cover the entire card */
    text-decoration: none; /* Removes underline */
    color: inherit; /* Inherits text color */
  }

  .project-1-description{
    display: flex;
    align-items: center;
    text-align: end;
    height: 85%;
    padding: 1rem;
    padding-left: 6rem;
    font-size: 1.8rem;
    line-height: 1.2;
    color: #333;
  }
  .project-1-title{
    display: flex;
    align-items: center;
    justify-content: flex-end;
    text-align: end;
    height: 100%;
    padding: 1rem;
    padding-top: 5rem;
    font-size: 2.7rem;
    font-weight: bold;
    line-height: 1.2;
    color: #333;
  }
  .project-2-description{
    display: flex;
    align-items: center;
    height: 75%;
    padding: 1rem;
    padding-bottom: 3rem;
    padding-right: 6rem;
    font-size: 1.8rem;
    line-height: 1.2;
    color: #333;
  }
  .project-2-title{
    display: flex;
    align-items: center;
    justify-content: flex-start;
    height: 100%;
    padding: 1rem;
    font-size: 2.7rem;
    font-weight: bold;
    line-height: 1.2;
    color: #333;
  }

  .project-1-image-1{
    max-width: 50%; 
    height: auto; 
    border-radius: 8px;
    filter: blur(5px);
    transition: filter 0.3s; 
  }
  .project-1-image-1:hover {
    filter: blur(0); 
  }

  .image-container{
    height:100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  h3{
      user-select: none; /* Disables text selection */
      color:#000000;
      font-size: 1rem;
  }
  p {
    font-size: 0.7rem;
    color: #000000;
  }
</style>
