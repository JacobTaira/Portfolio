---
import Layout from '../layouts/Layout.astro';
import ProjectCard from '../components/ProjectCard.astro';

interface Props {
  projects: { title: string; description: string; link: string }[];
}

const projects = [
  { title: 'FTC Tracker', description: 'A React Native app for FTC teams.', link: '#' },
  { title: 'GPA Calculator', description: 'A GUI for automatic GPA calculation.', link: '#' },
  { title: 'YouTube Chain Game', description: 'A puzzle game based on YouTube recommendations.', link: '#' }
];

---

<Layout title = "Projects">
  <div class="intro-text">
    <p>Hello! I'm Jacob, a passionate developer interested in robotics, AI, and computer science...</p>
  </div>
  <h1>Projects</h1>
  {projects.map(project => (
    <ProjectCard {...project} />
  ))}
</Layout>

<style>
	body {
  font-family: 'Arial', sans-serif;
  margin: 0;
  padding: 0;
  background-color: #f8f9fa;
}

  h1{
    user-select: none; /* Disables text selection */
    margin-bottom: 1rem;
}

.main-content {
  max-width: 1200px;
  margin: 0 auto;
  padding: 2rem;
}
/* Introduction Text */
.intro-text p {
  font-size: 1.55rem;
  font-weight: bold;
  line-height: 1.2;
  margin: 2rem 0;
  color: #333;
}

.project-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 1.5rem;
}

</style>
