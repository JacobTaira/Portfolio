---
import Layout from '../layouts/Layout.astro';
import ProjectCard from '../components/ProjectCard.astro';

interface Props {
  projects: { title: string; description: string; link: string }[];
}

const projects = [
  { title: 'FTC Tracker', description: 'A React Native app for FTC teams.', link: 'https://ftc-tracker.gitbook.io/ftc-tracker' },
  { title: 'GPA Calculator', description: 'A GUI for automatic GPA calculation.', link: '#' },
  { title: 'YouTube Chain Game', description: 'A puzzle game based on YouTube recommendations.', link: '#' }
];

---

<Layout title = "Home Page">
  <div class="intro-text">
    <p>Hello! I'm Jacob, a passionate developer interested in robotics, AI, and computer science...</p>
  </div>
  <hr />
  <h1>PROJECTS</h1>
  <!-- {projects.map(project => (
    <ProjectCard {...project} />
  ))} -->

  
    <div class="container">
      <div class="col-left">
        <div class="row row1"></div>

        <div class="row row2">
          <div class="row-col left"></div>
          <div class="row-col right"></div>
        </div>

        <div class="row row3">
          <div class="project-2-title">
            <p>Project 2</p>
          </div>
        </div>

        <div class="row row4">
          <div class="project-2-description">
            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor</p>
          </div>
        </div>
      </div>

      <div class="col-right">
        <div class="row row1">
          <div class="project-1-description">
            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor</p>
          </div>
        </div>

        <div class="row row2">
          <div class="project-1-title">
            <p>Project 1</p>
          </div>
        </div>

        <div class="row row3">
          <div class="row-col left"></div>

          <div class="row-col right">
            <div class="row-col"></div>
            <div class="row-col"></div>
          </div>
        </div>
      </div>

    </div>
  </div>
</Layout>

<style>
  /* CONTAINER STYLES */
  .container{
    display: flex;
    
    gap: .5rem;
    width: 1000px;
    height: 1500px;
  }
  .row{
    border-radius: 12px;
    border: 1px solid #838383;
  }
  .row-col{ 
    flex: 1;
    border: 1px solid #838383;
    border-radius: 12px;
  }

 /* LEFT COLUMN STYLES */
  .col-left{
    flex: 1;
    gap: .5rem;
    display: flex;
    flex-direction: column;
  }
  .col-left .row1{
    height: 20rem;
  }
  .col-left .row2{
    display:flex;
    height: 12rem;
    gap: 0.5rem;
    border-width: 0px;
  }
  .col-left .row3{
    height: 18rem;
  }
  .col-left .row4{
    height: 21.5rem;
  }
  .project-2-description{
    display: flex;
    align-items: center;
    height: 75%;
    padding: 1rem;
    padding-bottom: 3rem;
    padding-right: 6rem;
    font-size: 1.8rem;
    font-weight: bold;
    line-height: 1.2;
    color: #333;
  }
  .project-2-title{
    display: flex;
    align-items: center;
    justify-content: flex-start;
    height: 100%;
    padding: 1rem;
    font-size: 2.7rem;
    font-weight: bold;
    line-height: 1.2;
    color: #333;
  }
 

 /* RIGHT COLUMN STYLES */
  .col-right{
    flex: 1;
    gap: .5rem;
    display: flex;
    flex-direction: column;
  }
  .col-right .row1{
    height: 23rem;
    border: 1px solid #838383;
  }
  .col-right .row2{
    border: 1px solid #838383;
    height: 14rem;
    border-radius: 12px;
  }
  .col-right .row3{
    display:flex;
    height: 35rem;
    gap: 0.5rem;
    border-width: 0px;
  }
  .col-right .row3 .right{
    flex: 1;
    border-width: 0px;
    gap: .5rem;
    display: flex;
    flex-direction: column;
  } 
  .project-1-description{
    display: flex;
    align-items: center;
    text-align: end;
    height: 75%;
    padding: 1rem;
    padding-left: 6rem;
    font-size: 1.8rem;
    font-weight: bold;
    line-height: 1.2;
    color: #333;
  }
  .project-1-title{
    display: flex;
    align-items: center;
    justify-content: flex-end;
    text-align: end;
    height: 100%;
    padding: 1rem;
    padding-top: 5rem;
    font-size: 2.7rem;
    font-weight: bold;
    line-height: 1.2;
    color: #333;
  }


 /* PAGE STYLES */
  body {
    font-family: 'Arial', 'sans-serif';
    margin: 0;
    padding: 0;
    background-color: #ffffff;
  }
  hr {
      border: none;
      border-top: 1px solid #ccc;
      margin-bottom: 1rem;
      margin-top: 3rem;
    }
  h1{
      user-select: none; /* Disables text selection */
      color:#838383;
      font-size: 0.9rem;
      margin-bottom: 2rem;
  }
  .main-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
  }
  .intro-text p {
    font-size: 2.5rem;
    font-weight: bold;
    line-height: 1.2;
    margin: 1.5rem 0;
    color: #333;
  }
</style>
