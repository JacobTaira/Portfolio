<!-- src/pages/about.astro -->
---
import Layout from '../layouts/Layout.astro';
---

<Layout title="About Me">
  <div class="container">
    <p>Hello! I'm Jacob, a passionate developer interested in robotics, AI, and computer science...</p>
  </div>

  <div class="spline-container">
    <iframe src='https://my.spline.design/untitled-16c1988f7f1c0b973590782604b3c56f/' frameborder='0' width='100%' height='100%'></iframe>
  </div>
  
</Layout>

<style>
  body{
    font-family: 'Arial', 'sans-serif';
    background-color: #ffffff;
  }
  .container{
    display: flex;
    padding: 1rem;
    height: 1500px;
    border-radius: 12px;
    border: 1px solid #838383;
  }
  .spline-container {
    display: flex;
    gap: .5rem;
    width: 1000px;
    height: 1500px;
  }
  .spline-container iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
</style>